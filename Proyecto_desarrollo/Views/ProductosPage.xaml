<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Proyecto_desarrollo.Views.ProductosPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Proyecto_desarrollo.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentPage.BindingContext>
        <viewmodels:ProductosViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <Label Text="ðŸ’» Nuestras Computadoras" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource TextColor}"/>

                <CollectionView ItemsSource="{Binding Productos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{DynamicResource CardFrame}"
                                   Margin="0,0,0,10">
                                <VerticalStackLayout Spacing="12">
                                    <Label Text="{Binding Nombre}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"
                                           TextColor="{DynamicResource TextColor}"/>
                                    <Label Text="{Binding Descripcion}" 
                                           FontSize="14"
                                           TextColor="{DynamicResource TextColor}"/>

                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="{Binding Precio, StringFormat='Precio: ${0:F2}'}" 
                                               TextColor="Green" 
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Stock, StringFormat='Stock: {0}'}" 
                                               HorizontalOptions="End"
                                               TextColor="{DynamicResource TextColor}"/>
                                    </Grid>

                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                        <Button Text="ðŸ” Ver" 
                                                Style="{DynamicResource PrimaryButton}"
                                                FontSize="12"
                                                Padding="10,8"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductosViewModel}}, Path=VerDetallesCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Text="âœï¸ Editar" 
                                                BackgroundColor="{DynamicResource SecondaryColor}"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="12"
                                                Padding="10,8"
                                                Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductosViewModel}}, Path=EditarProductoCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Text="ðŸ—‘ï¸ Eliminar" 
                                                BackgroundColor="#FF6B6B"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="12"
                                                Padding="10,8"
                                                Grid.Column="2"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductosViewModel}}, Path=EliminarProductoCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="âž• Agregar Nuevo Producto" 
                        Style="{DynamicResource PrimaryButton}"
                        Command="{Binding AgregarProductoCommand}"/>

                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Button Text="ðŸ‘¥ Clientes" 
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnClientesClicked"/>

                    <Button Text="ðŸ“¦ Pedidos" 
                            BackgroundColor="{DynamicResource AccentColor}"
                            TextColor="White"
                            CornerRadius="10"
                            Grid.Column="1"
                            Clicked="OnPedidosClicked"/>

                    <Button Text="âš™ï¸ Ajustes" 
                            Style="{DynamicResource PrimaryButton}"
                            Grid.Column="2"
                            Clicked="OnSettingsClicked"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>