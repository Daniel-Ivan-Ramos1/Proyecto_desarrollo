<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Proyecto_desarrollo.Views.PedidosPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Proyecto_desarrollo.ViewModels"
             Title="{Binding Title}"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ContentPage.BindingContext>
        <viewmodels:PedidosViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <Label Text="ðŸ“¦ GestiÃ³n de Pedidos" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{DynamicResource TextColor}"/>

                <CollectionView ItemsSource="{Binding Pedidos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Style="{DynamicResource CardFrame}"
                                   Margin="0,0,0,10">
                                <VerticalStackLayout Spacing="12">
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="{Binding Id, StringFormat='Pedido #{0}'}" 
                                               FontAttributes="Bold" 
                                               FontSize="16"
                                               TextColor="{DynamicResource TextColor}"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Estado}" 
                                               HorizontalOptions="End"
                                               FontAttributes="Bold"
                                               TextColor="{Binding Estado, Converter={StaticResource EstadoColorConverter}}"/>
                                    </Grid>

                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="{Binding FechaPedido, StringFormat='Fecha: {0:dd/MM/yyyy}'}" 
                                               FontSize="14"
                                               TextColor="{DynamicResource TextColor}"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Total, StringFormat='Total: ${0:F2}'}" 
                                               HorizontalOptions="End"
                                               FontAttributes="Bold"
                                               TextColor="Green"/>
                                    </Grid>

                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="{Binding ClienteId, StringFormat='Cliente ID: {0}'}" 
                                               FontSize="12"
                                               TextColor="{DynamicResource TextColor}"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding ProductoId, StringFormat='Producto ID: {0}'}" 
                                               HorizontalOptions="End"
                                               FontSize="12"
                                               TextColor="{DynamicResource TextColor}"/>
                                    </Grid>

                                    <Label Text="{Binding Cantidad, StringFormat='Cantidad: {0} unidades'}" 
                                           FontSize="12"
                                           TextColor="{DynamicResource TextColor}"/>

                                    <Grid ColumnDefinitions="*,*,*" ColumnSpacing="8">
                                        <Button Text="ðŸ” Ver" 
                                                Style="{DynamicResource PrimaryButton}"
                                                FontSize="12"
                                                Padding="10,8"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PedidosViewModel}}, Path=VerDetallesCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Text="âœï¸ Editar" 
                                                BackgroundColor="{DynamicResource SecondaryColor}"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="12"
                                                Padding="10,8"
                                                Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PedidosViewModel}}, Path=EditarPedidoCommand}"
                                                CommandParameter="{Binding .}"/>

                                        <Button Text="ðŸ—‘ï¸ Eliminar" 
                                                BackgroundColor="#FF6B6B"
                                                TextColor="White"
                                                CornerRadius="8"
                                                FontSize="12"
                                                Padding="10,8"
                                                Grid.Column="2"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PedidosViewModel}}, Path=EliminarPedidoCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button x:Name="AgregarButton"
                        Text="âž• Crear Nuevo Pedido" 
                        Style="{DynamicResource PrimaryButton}"
                        Command="{Binding AgregarPedidoCommand}"/>

                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">
                    <Button x:Name="ProductosButton"
                            Text="ðŸ’» Productos" 
                            BackgroundColor="{DynamicResource SecondaryColor}"
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnProductosClicked"/>

                    <Button x:Name="ClientesButton"
                            Text="ðŸ‘¥ Clientes" 
                            BackgroundColor="{DynamicResource AccentColor}"
                            TextColor="White"
                            CornerRadius="10"
                            Grid.Column="1"
                            Clicked="OnClientesClicked"/>

                    <Button x:Name="SettingsButton"
                            Text="âš™ï¸ Ajustes" 
                            Style="{DynamicResource PrimaryButton}"
                            Grid.Column="2"
                            Clicked="OnSettingsClicked"/>
                </Grid>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>