<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Proyecto_desarrollo.Views.PedidosPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Proyecto_desarrollo.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <viewmodels:PedidosViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <Label Text="Gestión de Pedidos" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>

                <CollectionView ItemsSource="{Binding Pedidos}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#F0F8FF" 
                                   Padding="15" 
                                   CornerRadius="10"
                                   Margin="0,0,0,10">
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="{Binding Id, StringFormat='Pedido #{0}'}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"/>
                                    <Grid ColumnDefinitions="*,*">
                                        <Label Text="{Binding Total, StringFormat='Total: ${0:F2}'}" 
                                               TextColor="Green" 
                                               FontAttributes="Bold"/>
                                        <Label Grid.Column="1" 
                                               Text="{Binding Estado}" 
                                               HorizontalOptions="End"/>
                                    </Grid>
                                    <Label Text="{Binding FechaPedido, StringFormat='Fecha: {0:dd/MM/yyyy}'}" 
                                           FontSize="12"/>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="➕ Nuevo Pedido" 
                        BackgroundColor="#2E86AB"
                        TextColor="White"
                        CornerRadius="10"
                        Command="{Binding AgregarPedidoCommand}"/>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>