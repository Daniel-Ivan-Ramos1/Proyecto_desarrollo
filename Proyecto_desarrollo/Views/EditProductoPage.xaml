<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Proyecto_desarrollo.Views.EditProductoPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="âœï¸ Editar Producto"
             BackgroundColor="{DynamicResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <Label Text="Editar Computadora" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{DynamicResource TextColor}"/>

            <Frame Style="{DynamicResource CardFrame}">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Nombre del Producto:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry x:Name="NombreEntry" 
                           Placeholder="Ej: Laptop Gamer Pro"
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                    <Label Text="DescripciÃ³n:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Editor x:Name="DescripcionEditor" 
                           HeightRequest="60" 
                           Placeholder="DescripciÃ³n del producto..."
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout>
                            <Label Text="Precio:" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource TextColor}"/>
                            <Entry x:Name="PrecioEntry" 
                                   Placeholder="0.00" 
                                   Keyboard="Numeric"
                                   BackgroundColor="{DynamicResource CardColor}"
                                   TextColor="{DynamicResource TextColor}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Stock:" 
                                   FontAttributes="Bold"
                                   TextColor="{DynamicResource TextColor}"/>
                            <Entry x:Name="StockEntry" 
                                   Placeholder="0" 
                                   Keyboard="Numeric"
                                   BackgroundColor="{DynamicResource CardColor}"
                                   TextColor="{DynamicResource TextColor}"/>
                        </VerticalStackLayout>
                    </Grid>

                    <Label Text="Procesador:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry x:Name="ProcesadorEntry" 
                           Placeholder="Ej: Intel Core i7"
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                    <Label Text="RAM:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry x:Name="RAMEntry" 
                           Placeholder="Ej: 16GB DDR5"
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                    <Label Text="Almacenamiento:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry x:Name="AlmacenamientoEntry" 
                           Placeholder="Ej: 1TB NVMe SSD"
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                    <Label Text="Tarjeta de Video:" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource TextColor}"/>
                    <Entry x:Name="TarjetaVideoEntry" 
                           Placeholder="Ej: NVIDIA RTX 4060"
                           BackgroundColor="{DynamicResource CardColor}"
                           TextColor="{DynamicResource TextColor}"/>

                </VerticalStackLayout>
            </Frame>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Button Text="âŒ Cancelar" 
                        BackgroundColor="#FF6B6B"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="OnCancelarClicked"/>

                <Button Text="ðŸ’¾ Guardar Cambios" 
                        Style="{DynamicResource PrimaryButton}"
                        Grid.Column="1"
                        Clicked="OnGuardarCambiosClicked"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>